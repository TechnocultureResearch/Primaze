{
    // pytest
    "python.linting.enabled": true,
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,

    // exclude files
    "files.exclude": {
        "LICENSE": true,
        "venv": true,
        ".pypirc": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/__init__.py": true,
        "README.md": true,
        ".gitignore": true,
        ".travis.yml": true,
        ".bashrc": true,
        "setup.py": true,
        "setup.cfg": true,
        "log": true,
        "scripts": true,
        "Priserve": true
    },

    // python settings
    "[python]": {
        "editor.formatOnSave": true,
    }
}